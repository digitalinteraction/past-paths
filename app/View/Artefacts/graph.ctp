    <script>
    
        (function(){
            
            var message = $('<div id="m" />').css({
                top: 20,
                left: 20,
                height: 30,
                lineHeight: '30px',
                padding: '0 10px',
                background: 'black',
                border: '1px solid yellow',
                color: 'yellow',
                opacity: 0
            }).hide().appendTo('body');
            
            
            jQuery(window).bind('scrollstart', function(){
                $(document.body).css({
                    color: '#F6FF96'
                });
                message.html('SCROLLING').stop().show().animate({
                    opacity: 1
                });
            });
            
            jQuery(window).bind('scrollstop', function(e){
                $(document.body).css({
                    color: ''
                });
                message.stop().show().animate({
                    opacity: 0
                });
            });
            
        })();


        
    </script>
